<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.vimplugin.vimplugin"
   name="Vimplugin"
   version="1.2"
   provider-name="Vimplugin Project"
   class="org.vimplugin.VimPlugin">
   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.console"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.jdt"/>
   </requires>
   <extension
         id="vimplugin.editors"
         name="vimeditor"
         point="org.eclipse.ui.editors">
      <editor
            id="org.eeedit.vimplugin.editors.VimEditor"
            name="Vim"
            class="org.vimplugin.editors.VimEditor"
            contributorClass="org.vimplugin.VimActionContributor"            
            icon="icons/vim16x16.gif">
            <contentTypeBinding
               contentTypeId="org.eclipse.core.runtime.text"
            /> 
      </editor>
   </extension>
   <extension
         id="vimplugin.editorsNewWindow"
         name="vimeditorNewWindow"
         point="org.eclipse.ui.editors">
      <editor
            class="org.vimplugin.editors.VimEditorNewWindow"
            contributorClass="org.vimplugin.VimActionContributor"
            default="false"
            icon="icons/vim16x16.gif"
            id="org.eeedit.vimplugin.editors.VimEditorNewWindow"
            name="Vim (new window)"/>            
   </extension>
